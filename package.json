{
  "name": "docket-api",
  "version": "0.1.0",
  "description": "Docket API",
  "main": "index.js",
  "scripts": {
    "generate:secret": "node --eval \"console.log(crypto.randomBytes(64).toString('hex'))\"",
    "start": "node index.js",
    "start:prod": "$(npm bin)/pm2 start ./index.js",
    "start:debug": "node --inspect-brk ./index.js",
    "start:repl": "node ./repl.js",
    "test": "jest",
    "lint": "$(npm bin)/eslint ./src"
  },
  "author": "John Goldsmith <johngoldsm1@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/john-goldsmith/docket-api.git"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.3",
    "cors": "2.8.5",
    "debug": "4.1.0",
    "dotenv": "6.1.0",
    "express": "4.16.4",
    "http-status": "1.2.0",
    "joi": "14.3.0",
    "jsonwebtoken": "8.4.0",
    "moment": "2.22.2",
    "mongodb": "3.1.9",
    "mongoose": "5.3.11",
    "nodemailer": "5.0.0",
    "pm2": "3.2.2",
    "slugify": "^1.3.4"
  },
  "devDependencies": {
    "autocannon": "3.2.0",
    "clinic": "2.2.1",
    "eslint": "5.9.0",
    "husky": "1.1.3",
    "jest": "23.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  }
}
